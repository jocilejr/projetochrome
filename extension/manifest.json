{
  "manifest_version": 3,
  "name": "WhatsApp Audio Transcriber",
  "version": "1.0.0",
  "description": "Transcreve rapidamente os audios da conversa ativa no WhatsApp Web usando a API da OpenAI.",
  "permissions": [
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Transcrever ultimo audio"
  }
}
